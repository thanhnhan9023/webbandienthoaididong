@model WebMuaBanDTDD.Models.HANG

@{
    ViewBag.Title = "xoaDT";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    if (Session["TaiKhoanAd"] == null)
    {
        Response.Redirect("~/MainPage/Index");
    }
}
<br />
<h2 style="text-align:center">XÁC NHẬN XÓA ĐIỆN THOẠI</h2>
<br />
<h3 style="text-align:center; color:red">Bạn có chắc chắn muốn xóa điện thoại này?</h3><br />

<table class="center">
    <tr style="border-top:1px solid black">
        <td style="font-weight:bold; background-color:yellow; color:orange">Tên điện thoại</td>
        <td style="margin-left:10px">@Html.DisplayFor(model => model.TENDT)</td>
    </tr>
    <tr>
        <td style="font-weight:bold; background-color:yellow; color:orange">Ảnh</td>
        <td><img src="@Url.Content("~/Content/images/sanpham/"+ Model.HINHANH)" width="200" /></td>
    </tr>
    <tr>
        <td style="font-weight:bold; background-color:yellow; color:orange">Số lượng</td>
        <td>@Html.DisplayFor(model => model.SOLUONG)</td>
    </tr>
    <tr>
        <td style="font-weight:bold; background-color:yellow; color:orange">Nhà sản xuất</td>
        <td>@Html.DisplayFor(model => model.NHASX.TENNHASX)</td>
    </tr>
    <tr>
        <td style="font-weight:bold; background-color:yellow; color:orange">Ngày áp dụng</td>
        <td>@String.Format("{0:dd/MM/yyyy}", Model.NGAYAD)</td>
    </tr>
    <tr>
        <td style="font-weight:bold; background-color:yellow; color:orange">Đơn giá</td>
        <td>@String.Format("{0:0,0}", Model.GIA) VNĐ</td>
    </tr>
</table>
<br />
@using (Html.BeginForm()) {
    <p style="text-align:center">
        <input type="submit" value="Delete" class="btn btn-default" style="color:white; background-color:red; font-weight:bold" /> |
        @Html.ActionLink("Về trang quản lý sách", "Dienthoai", "Admin")
    </p>
}

<style>
    table.center {
        margin-left:auto;
        margin-right:auto;
        text-align:center;
    }
    .center tr {
        border:1px solid black;
        border-right:none;
        border-top:none;
    }
    .center td {
        border-right:1px solid black;
        width:200px;
        background-color:lightblue;
    }
</style>
